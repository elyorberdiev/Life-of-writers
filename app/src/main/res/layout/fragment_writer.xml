<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_back_color"
    android:padding="10dp"
    tools:context=".fragments.WriterFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/float_back_color"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_back"
        app:fabSize="mini"
        app:maxImageSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.like.LikeButton
        android:layout_marginTop="5dp"
        android:id="@+id/like_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/item_back_favorite"
        app:anim_scale_factor="1"
        app:circle_end_color="@color/appColor"
        app:circle_start_color="@color/appColor"
        app:dots_primary_color="@color/appColor"
        app:dots_secondary_color="@color/appColor"
        app:icon_size="30dp"
        app:icon_type="star"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintLeft_toRightOf="@id/back_write"
        app:layout_constraintRight_toLeftOf="@id/search_write"
        app:layout_constraintTop_toTopOf="parent"
        app:like_drawable="@drawable/ic_sharp_bookmark_white"
        app:unlike_drawable="@drawable/ic_sharp_bookmark_black" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/search_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/float_back_color"
        android:src="@drawable/ic_search_figma"
        app:fabSize="mini"
        app:maxImageSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/card_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_write">

        <LinearLayout
            android:background="@color/back_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/writer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nizomiy Ganjaviy"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/writer_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(1141-1209)" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:background="@color/back_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:background="@color/back_white"
                        android:id="@+id/writer_image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_launcher_background" />

                    <TextView
                        android:id="@+id/writer_desc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>